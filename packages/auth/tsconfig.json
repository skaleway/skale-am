{
  "extends": "@skaleam/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@skaleam/db": ["../db/src/index.ts"],
      "@skaleam/db/*": ["../db/src/*.ts"]
    },
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src"]
}

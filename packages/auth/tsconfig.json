{
  "extends": "@skaleam/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@skaleam/db": ["../db/dist/index.d.ts"],
      "@skaleam/db/*": ["../db/dist/*.d.ts"]
    },
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src"]
}
